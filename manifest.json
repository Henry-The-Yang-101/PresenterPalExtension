{
    "manifest_version": 2,
    "name": "PresenterPal Chrome Extension",
    "version": "1.0",
    "description": "PresenterPal Chrome Extension",
  
    "browser_action": {
      
      "default_popup": "popup.html"
    },
    "minimum_chrome_version": "116",
  
    "permissions": ["activeTab", "webRequest", "webRequestBlocking"],

    "background": {
        "scripts": ["background.js"],
        "persistent": true
        }
  }